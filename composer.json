{
    "name": "yurunsoft/swoole-co-pool",
    "license": "MIT",
    "require": {
        "php": ">=7.1",
        "ext-swoole": "4.4.* || >=4.6"
    },
    "require-dev": {
        "phpunit/phpunit": ">=7",
        "swoole/ide-helper": "^4",
        "friendsofphp/php-cs-fixer": "2.18.3",
        "phpstan/phpstan": "0.12.82"
    },
    "autoload": {
        "psr-4": {
            "Yurun\\Swoole\\CoPool\\": "./src"
        },
        "files": [
            "./src/function.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Yurun\\Swoole\\CoPool\\Test\\": "./tests/test"
        }
    },
    "scripts": {
        "test": "./tests/phpunit -c ./tests/phpunit.xml"
    }
}